  <title>Chatbot NghiÃªn cá»©u Giáº¥y Náº£y Máº§m</title>
  <script type="module">
    import { GoogleGenerativeAI } from "https://esm.run/@google/generative-ai";

    const API_KEY = "greeniegreenie-9ebk"; // <-- DÃ¡n API key vÃ o Ä‘Ã¢y
    const genAI = new GoogleGenerativeAI(API_KEY);
    const model = genAI.getGenerativeModel({ model: "gemini-1.5-flash" });

    async function sendMessage() {
      const userInput = document.getElementById("user-input").value;
      if (!userInput.trim()) return;
      
      appendMessage("ðŸ‘¤ Báº¡n", userInput);
      document.getElementById("user-input").value = "";

      const chatDiv = document.getElementById("chat-box");
      chatDiv.scrollTop = chatDiv.scrollHeight;

      try {
        const result = await model.generateContent(userInput);
        const response = await result.response.text();
        appendMessage("ðŸ¤– Chatbot", response);
      } catch (err) {
        appendMessage("âš ï¸ Lá»—i", "KhÃ´ng thá»ƒ gá»­i tin nháº¯n. HÃ£y kiá»ƒm tra API key.");
        console.error(err);
      }
    }

    function appendMessage(sender, text) {
      const chatBox = document.getElementById("chat-box");
      const message = document.createElement("div");
      message.innerHTML = `<b>${sender}:</b> ${text}`;
      message.style.margin = "8px 0";
      chatBox.appendChild(message);
      chatBox.scrollTop = chatBox.scrollHeight;
    }

    window.sendMessage = sendMessage;
  </script>

